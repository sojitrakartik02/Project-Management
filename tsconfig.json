{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2017", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "dotenv", "jest"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "noEmit": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"],
      "@Auth/*": ["Modules/Auth/*"],
      "@userManagement/*": ["Modules/userManagement/*"],
      "@ProjectManager/*": ["Modules/ProjectManager/*"],
      "@config/*": ["config/*"],
      "@Project/*": ["Modules/Project/*"],
      "@database/*": ["database/*"],
      "@helpers/*": ["utils/helpers/*"],
      "@exceptions/*": ["utils/exceptions/*"],
      "@interface/*": ["interface/*"],
      "@mail/*": ["utils/mail/*"],
      "@Masters/*": ["Modules/Masters/*"],
      "@middlewares/*": ["middlewares/*"],
      "@Permission/*": ["Modules/Permission/*"],
      "@Role/*": ["Modules/Role/*"],
      "@tests/": ["tests/*"],
      "@types": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"]
}
